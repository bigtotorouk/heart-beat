<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
	  <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_topbar" >
        
        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />
        <View android:id="@+id/spelling"
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/back"
            android:background="@color/line_color" />
        
        <TextView android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/spelling"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:gravity="center"
            android:text="profiledsfsadfsdfasdfasdfasdfasdfsadfsadfasdfsadfasdfsadfsadf" 
            style="@style/text_font1"
            android:textSize="24sp"/>
    </RelativeLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1.0"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
        android:paddingLeft="10dp"
    	android:paddingRight="10dp">
        <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:src="@drawable/girl_detail"/>
        
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
            <TextView android:id="@+id/author" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                
                android:text="Author: xiaobingzaixiansdfsadfasdfasdfas"
                />
            <TextView android:id="@+id/price" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:singleLine="true"
                android:gravity="right"
                android:text="Price: 100.00$"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Description:"
                />
            <TextView android:id="@+id/description" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="4dp"
                android:text="sdfsadfsadfsjadfsakdlfjsad;kfsda;lkfl;asdkfsa;dlkfs;dlkf;sadkflas;dkf;asldkf;lsadkfl;sdkf;lsdakf;lksdfsad;lkf;lasdkfa;lsdkf"
                />
        </LinearLayout>
         <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Location:"
                />
            <TextView android:id="@+id/location" 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:layout_marginLeft="4dp"
                android:text="sdfsadfsadfsjadfsakdlfjsad;kfsda;lkfl;asdkfsa;dlkfs;d"
                />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:orientation="horizontal">
            <TextView android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1.0"
	            android:gravity="left"
	            android:text="Time: 2012/4/18"/>
            <ImageView android:id="@+id/star" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                
                android:src="@drawable/star22"
                />
        </LinearLayout>
		 <TextView android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:text="Comments"
			style="@style/text_font1"
	        android:textSize="18sp"/>
		 <View android:layout_width="fill_parent" android:layout_height="1dp" android:background="@color/white"/>
		 <ListView android:id="@+id/comments"
		     android:layout_width="fill_parent"
		     android:layout_height="fill_parent">
		     
		 </ListView>
    </LinearLayout>
   
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_vertical"
		    android:orientation="horizontal"
		    android:background="@drawable/bg_topbar">
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Input your comments ..."/>
	</LinearLayout>
    
</LinearLayout>